<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.chattingapp">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Chattingapp"
        android:usesCleartextTraffic="true">
        <activity android:name=".Activities.Splashscreen_Activity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Activities.Settings_Activity" />
        <activity android:name=".Activities.ChatActivity" />
        <activity android:name=".Activities.SetupProfileActivity" />
        <activity
            android:name=".Activities.OtpActivity"
            android:windowSoftInputMode="stateVisible" />
        <activity
            android:name=".Activities.PhoneNumberActivity"
            android:windowSoftInputMode="stateVisible">

        </activity>
        <activity android:name=".Activities.MainActivity" />

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

    <uses-feature
        android:name="android.hardware.camera"
        android:required="true" />

    <uses-permission android:name="android.permission.INTERNET" />

</manifest>