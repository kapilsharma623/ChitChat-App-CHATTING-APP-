<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Chit2Chat" parent="Theme.MaterialComponents.DayNight.DarkActionBar">

        <item name="android:textColor">@color/black</item>
        <item name="actionMenuTextColor">@color/black</item>
        <item name="android:textColorPrimary" >@color/black</item>
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/statusbarcolor</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/statusbarcolor</item>
        <item name="android:actionOverflowButtonStyle">@style/mytheme</item>
        <item name="titleTextColor">@color/black</item>
        <item name="android:titleTextStyle">@style/ToolbarrTheme</item>

    </style>
    <style name="mytheme" parent="android:style/Widget.Holo.ActionButton.Overflow">
        <item name="android:src">@drawable/menu</item>
    </style>
    <style name="ToolbarrTheme" parent="ThemeOverlay.MaterialComponents.Light">
        <item name="android:fontFamily">@font/audiowide</item>
    </style>




</resources>